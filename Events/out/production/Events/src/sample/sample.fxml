<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextField GridPane.rowIndex="0" GridPane.columnIndex="0" fx:id="nameField"
               onKeyReleased="#handleKeyRelease"/>
    <Button GridPane.rowIndex="1" GridPane.columnIndex="0" fx:id="helloButton"
            text="click me" onAction="#onButtonclicked"/>
    <Button GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="byeButton"
            text="click me 2" onAction="#onButtonclicked"/>
    <CheckBox GridPane.rowIndex="2" GridPane.columnIndex="0" fx:id="clearCheckBox"
              text="clear the text field after clicking button" onAction="#handleChange"/>
    <Label fx:id="ourLabel" text="Nothing has happened" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
</GridPane>